<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.BadHabits.AppBarOverlay">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:foreground="@android:color/transparent"
            android:orientation="vertical">

            <Button
                android:id="@+id/smoking_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="16dp"
                android:width="200dp"
                android:height="25dp"
                android:background="#000000"
                android:foregroundGravity="top|center"
                android:foregroundTint="#FFFFFF"
                android:gravity="center|top"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="goToHabit"
                android:text="Курение"
                android:textAlignment="gravity"
                android:textDirection="firstStrongRtl"
                android:textSize="14sp"
                app:iconGravity="top"
                app:iconPadding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/alco_button"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="4dp"
                android:width="200dp"
                android:height="25dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="goToHabit"
                android:text="Алкоголизм"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/champ_button"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/champ_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="4dp"
                android:width="200dp"
                android:height="25dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="goToHabit"
                android:text="Чавкание"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/smoking_button"
                tools:ignore="TouchTargetSizeCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/Advice1"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/howDay"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center"
            android:onClick="goToHowDay"
            android:text="Как прошёл ваш день?" />

        <Button
            android:id="@+id/howDayBefore"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:onClick="goToHowDayBefore"
            android:text="А предыдущий день?" />

        <Button
            android:id="@+id/statistic"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:onClick="goToStatistic"
            android:text="Статистика" />

        <TextView
            android:id="@+id/advice"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:background="#00CCB4"
            android:foregroundGravity="center"
            android:gravity="center_horizontal|center_vertical"
            android:text="Курить - здоровью вредить! Понятненько?!"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>