<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HowDayBefore">


    <TextView
        android:id="@+id/habitName4"
        android:layout_width="137dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:text="Был ли срыв?"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/yesButton4"
        app:layout_constraintStart_toEndOf="@+id/noButton4"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/yesButton4"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="40dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="onYesButtonClick"
        android:text="Да"
        android:textSize="8sp"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/noButton4"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="92dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="onNoButtonClick"
        android:text="Нет"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/exitFromHabbit"
        android:layout_width="43dp"
        android:layout_height="49dp"
        android:background="#020202"
        android:foreground="#00000000"
        android:onClick="returnToMain"
        android:shadowColor="#FFFFFF"
        android:text="X"
        android:textColorHighlight="#FDFDFD"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#FFFFFF" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="145dp"
        android:text="Сохранить"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/moodSeek"
        android:layout_width="145dp"
        android:layout_height="22dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="134dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/feelSeek"
        android:layout_width="145dp"
        android:layout_height="22dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="384dp"
        android:layout_marginEnd="134dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/yourMood"
        android:layout_width="303dp"
        android:layout_height="19dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="52dp"
        android:text="Каково было ваше настроение?"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/chooseDate"
        android:layout_width="156dp"
        android:layout_height="36dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="127dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="getDate"
        android:text="Выберите дату"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/yourMood2"
        android:layout_width="303dp"
        android:layout_height="19dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="52dp"
        android:text="Каково было ваше самочувствие?"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/date"
        android:layout_width="130dp"
        android:layout_height="26dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="140dp"
        android:text="Какая то дата"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>